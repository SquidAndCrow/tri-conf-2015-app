<div class="panel container-fluid filter">
  <div class="row">
    <div class="col-lg-4 col-med-4 col-sm-4">
      <form role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
      </form>
    </div>
    <div class="col-lg-8 col-med-8 col-sm-8">
      <ul class="nav nav-tabs nav-pills">
        <li class="pill-triconf {{if isAllEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'AllEvents'}}>All</a></li>
        <li class="pill-music {{if isCultureEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'CultureEvents'}}>Culture/Arts/Music</a></li>
        <li class="pill-activism {{if isCommunityEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'CommunityEvents'}}>Community/Issues/Sustainability</a></li>
        <li class="pill-tech {{if isTechnologyEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'TechEvents'}}>Tech</a></li>
        <li class="pill-art-and-design {{if isDesignEventsHidden 'disabled'}}"><a href="#" {{action 'filter' 'DesignEvents'}}>Design/Communication</a></li>
        <li class="pill-entrepreneurship {{if isEntrepreneurshipEventsHidden 'disabled'}}" {{action 'filter' 'EntrepreneurshipEvents'}}><a href="#">Entrepreneurship</a></li>
      </ul>
    </div>
  </div>
</div>
{{#if session.user.isAdmin}}
<button class="btn btn-primary"><i class="fa fa-plus icon"></i></button>
{{/if}}
{{#each event in model}}
  {{#link-to 'check-in'}}
    <div class="col-md-6">
      <div class="panel event {{event.track.style}} {{if isAllEventsHidden 'disabled'}} {{if isCultureEventsHidden 'cultureHidden'}} {{if isCommunityEventsHidden 'communityHidden'}} {{if isTechnologyEventsHidden 'technologyHidden'}} {{if isDesignEventsHidden 'designHidden'}} {{if isEntrepreneurshipEventsHidden 'entrepreneurshipHidden'}}">
        <div class="panel-heading">
          <h2 class="panel-title">{{event.title}}</h2>
        </div>
        <div class="media">
          <div class="media-body">
            <div class="row">
              <div class="col-xs-9"><p><label>Speaker:</label> {{event.speaker}}</p>
                <p><label>Track:</label> {{event.track.name}}</p>
                <p><label>Location:</label> {{event.location.name}}</p></div>
              <div class="col-xs-3 event-time"><p>{{event.time}}</p><p>{{event.day}}</p></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/link-to}}
{{/each}}